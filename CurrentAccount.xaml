<UserControl x:Class="Bitdozer.CurrentAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" x:Name="lCurrentAccount" Foreground="{StaticResource AccountHighlighter}" DataContext="MainPage" Text="Current Account:"></TextBlock>
            <TextBlock VerticalAlignment="Center" Text=" "></TextBlock>
            <TextBlock VerticalAlignment="Center" x:Name="tbCurrentAccount" DataContext="MainPage" Text="{Binding CurrentAccount}" Foreground="{StaticResource AccountHighlighter}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
