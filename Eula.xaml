<UserControl x:Class="Bitdozer.Eula"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock x:Name="tbEULAText" TextWrapping="Wrap"></TextBlock>                
                <TextBlock x:Name="tbEULAText2" TextWrapping="Wrap"></TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnAcceptEULA" Content="Accept" Click="btnAcceptEULA_Click"></Button>                    
                </StackPanel>
                <TextBlock x:Name="tbDNA" TextWrapping="Wrap" Text="If you do not agree, you may close this application by tapping the back button on your phone."></TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
