<UserControl x:Class="Bitdozer.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="480" Height="800">
    <Grid x:Name="LayoutRoot" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">        
        <MediaElement x:Name="meSoundz" Visibility="Collapsed"  AutoPlay="False" MediaOpened="meSoundz_MediaOpened" MediaFailed="meSoundz_MediaFailed" MediaEnded="meSoundz_MediaEnded" Canvas.ZIndex="0"/>
        <Image x:Name="iScreen" Source="/Assets/SplashScreen.png" Height="800" Width="480" Canvas.ZIndex="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"> </Image>
    </Grid>
</UserControl>
